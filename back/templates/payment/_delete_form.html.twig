<form method="post" action="{{ path('payment_delete', {'idpayment': payment.idpayment}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ payment.idpayment) }}">
    <button class="btn">Delete</button>
</form>
